public class ReverseString {
    public static String reverseUsingLoop(String str) {
        // Create an empty string to store the reversed result
        String reversed = "";
        
        // Iterate through the original string in reverse order and append characters to the result
        for (int i = str.length() - 1; i >= 0; i--) {
            reversed += str.charAt(i);
        }
        
        return reversed;
    }

    public static void main(String[] args) {
        String original = "Hello, World!";
        String reversed = reverseUsingLoop(original);
        
        System.out.println("Original String: " + original);
        System.out.println("Reversed String: " + reversed);
    }
}
